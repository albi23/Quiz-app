<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@drawable/theme_block"
              android:layout_marginRight="5dp"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="2.5dp"
              android:layout_marginBottom="2.5dp" android:padding="4dp">
    <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:minHeight="300dip"
            android:minWidth="300dip"
            android:maxHeight="300dip"
            android:scaleType="fitXY"
            android:maxWidth="300dip"
            android:id="@+id/categoryImage"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/animals"
            android:layout_weight="1"
            android:adjustViewBounds="true"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/categoryName"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:textSize="36sp"
            android:textColor="@color/colorAppDark"
            android:textAllCaps="true" android:gravity="center"/>
</LinearLayout>