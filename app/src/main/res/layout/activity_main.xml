<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorAppDark" android:orientation="vertical">

    <Button
            android:text="@string/play"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/playButton"
            android:onClick="playNewGame" android:background="@drawable/theme_block"
            app:layout_constraintBottom_toTopOf="@+id/statisticsButton"
            android:textSize="36sp" android:fontFamily="sans-serif" android:layout_weight="8"
            android:layout_marginTop="8dp" android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="4dp"/>
    <Button
            android:text="@string/statistics"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/statisticsButton"
            android:onClick="showStatistics" android:background="@drawable/theme_block"
            android:layout_weight="1" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:textSize="30sp"
            android:fontFamily="sans-serif"/>
    <Button
            android:text="@string/action_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/settingsButton"
            android:onClick="showSettings" android:background="@drawable/theme_block"
            android:layout_weight="1" android:layout_marginTop="4dp" android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:textSize="30sp"
            android:fontFamily="sans-serif"/>

</LinearLayout>